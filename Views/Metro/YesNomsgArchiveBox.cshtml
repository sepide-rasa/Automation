<div class="modal" id="YesNoMsgArchiveBox">

    @Automation.Helper.winClass.windowHeader("", "هشدار", 250, 180)
    <br />
    <div id="message">
    </div>
    <br />
    @Automation.Helper.winClass.Buttons("yes", "بله", "yes")
    @Automation.Helper.winClass.Buttons("No", "خیر", "no")
    <br />
    <script type="text/javascript">
        $("document").ready(function () {
            $("#yes").button();
            $("#No").button();
            $("#yes").click(function () {
                MetroDialogOpen = false;
                var url = '@ViewBag.URL';
                var data = { LetterId: '@ViewBag.LetterId', ArchivID: '@ViewBag.ArchivID' };
                PostForm(data, url, "#win");
                $("#YesNoMsgArchiveBox").remove();
            });

            $("#No").click(function () {
                MetroDialogOpen = false;
                $("#YesNoMsgArchiveBox").remove();
            });
            $("#btnClose").click(function () {
                MetroDialogOpen = false;
                $("#YesNoMsgArchiveBox").remove();
            });
        });

    </script>
    @Automation.Helper.winClass.windowFother()
</div>
