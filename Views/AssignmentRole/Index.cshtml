            function FillTree(nodes) {
                var checked = $('input[type=checkbox]');
                for (var i = 0; i < nodes.length; i++) {

                    for (var k = 0; k < array.length; k++) {
                        if (nodes[i].Reciver == array[k]) {
                            for (var j = 0; j < checked.length; j++) {
                                var f = checked.valueOf()[j];
                                
