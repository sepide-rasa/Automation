                           </td>
         
                            <td align="left">
                        <span style="color: Red;"></span> محرمانگی:
                    </td>
                    <td>
                        @(Html.Kendo().DropDownList()
                                  .Name("cboSecurityType")
                                  .OptionLabel("")
                                  .DataTextField("fldName")
                                  .DataValueField("fldID")
                                  .OptionLabel("محرمانگی...")
                                  .DataSource(source =>
                                  {
                                      source.Read(read =>
