    <script type="text/javascript">
            var angleSec = 0;
        var angleMin = 0;
        var angleHour = 0;
        var min, hor;
        var chat = $.connection.chatHub;
        var treeRefresh;
        setInterval(function () {
            angleSec = ((angleSec / 6 + 1) * 6);
            $("#seconds").rotate(angleSec);
            if (angleSec >= 360) {

                angleMin = (angleMin / 6 + 1) * 6;
                $("#minutes").rotate(angleMin);
                angleSec = 0;
            }
            if (angleMin >= 360) {
                angleMin = 0;
            }

            treeRefresh++;
            if (treeRefresh == 30) {
                var t = $(".Usertreeview");
                for (var i = 0; i < t.length; i++) {
                    var f = t[i];
                    $('#' + f.id).data('kendoTreeView').dataSource.read()
                }
                //chek have PM
                $.ajax({
                    type: "GET",
                    url: '/Chat/HavePm',
                    data: {
                        UID: '@Session["UserId"]'
                    },
                    success: function (data) {
                        if (data.Have) {
                            Ext.net.Notification.show({
                                hideFx: {
                                    fxName: 'switchOff'
                                },
                                showFx: {
                                    fxName: 'slideIn',
                                    args: [
                                    'tl', {
                                        easing: 'bounceOut',
                                        duration: 1000
                                    }
                                    ]
                                },
                                pinEvent: 'click',
                                alignToCfg: {
                                    offset: [20, 20],
                                    position: 'tl-tl'
                                },
                                html: "<ul>" + data.Letter + data.txt + "</ul>",
                                title: 'خوانده نشده ها: ',
                                width: 220,
                                height: 120
                            });
                        }
                    }
                });
                var tree = $('#chattreeview').data("kendoTreeView");
                if (tree != null)
                    tree.dataSource.read();
                treeRefresh = 0;
            }
        }, 1000);
