@using Kendo.Mvc.UI;
<div class="modal" id="ExternalPartner">
    <script src="@Url.Content("~/Content/Base.js")" type="text/javascript"></script>    
    <div>    
        <br />
         <a href="@Url.Content("~/Helps/تعریف ارگانهای خارجی.htm")" target="_blank" id="Help" title="راهنما" style="background-image:url('/Content/images/1381415123_help.png');background-repeat: no-repeat;width:20px;height: 20px;float: left;top: 10px;left: 10px;"></a>
        <center>
            <table>          
                 <tr>
                    <td align="left">
                        @Html.Hidden("fldID")
                        <span style="color: Red;">*</span>نام:
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textbox("txtName")
                        <span id="lblNameError" style="color: Red;"></span>
                    </td>
                      <td align="left">
                        تلفن :
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textbox("txtTel")                       
                    </td>
                      </tr> 
                   <tr>
                      <td align="left">
                    سامانه پیام کوتاه :  
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textbox("txtSmsOrder")                       
                    </td>
                        <td align="left">
                    وب سایت :  
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textbox("txtWebsite")                       
                    </td>
                       </tr>            
                  <tr>
                    <td align="left">
                        ایمیل:
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textbox("txtEmailAddress")                        
                    </td>
                   </tr>
                <tr>
                    <td align="left">
                        آدرس:
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textArea("txtAddress",4,30)
                    </td>
                    <td align="left">
                        توضیحات:
                    </td>
                    <td align="right">
                        @Automation.Helper.winClass.textArea("txtDesc", 4, 30)
                    </td>
                </tr>               
            </table>
            <p>
                @Automation.Helper.winClass.Buttons("AddLink", "ذخیره", "Save")
                @Automation.Helper.winClass.Buttons("EditLink", "ویرایش", "Edit")
                @Automation.Helper.winClass.Buttons("DelLink1", "حذف", "Del")
                @Automation.Helper.winClass.Buttons("exit", "خروج", "Exit")
            </p>
        </center>
        @(Html.Kendo().PanelBar()
        .Name("panelbar-images")
        .Items(panelbar =>
        {
            panelbar.Add().Text("جستجو")
                .ImageUrl(Url.Content("~/Content/images/search.png"))
                .Content(@<div>
                    <table>
                        <tr>
                            <td>
                                فیلد جستجو:@Html.DropDownList("cboSearchFiald", new SelectList(new[] {new{ ID = "0", Name = "نام" } }, "ID", "Name"))
                            </td>
                            <td>
                                نوع جستجو: @Html.DropDownList("cboSearchType", new SelectList(new[] { new { ID = "0", Name = "مشابه عبارت" }, new { ID = "1", Name = "مشابه عبارت از سمت راست" }, new { ID = "2", Name = "عین عبارت" } }, "ID", "Name"))
                            </td>
                        </tr>
                        <tr>
                            <td>
                                عبارت جستجو: @Automation.Helper.winClass.textbox("txtSearch")
                            </td>
                            <td>
                                نتیجه رکوردها: @Html.TextBox("txtTop", 30, new { @style = "width:30px;" }) رکورد
                            </td>
                        </tr>
                    </table>
                    <br />
                </div>);
        })
        )
        <div class="k-rtl demo-section">
            @(Html.Kendo().Grid<Automation.Models.sp_tblExternalPartnerSelect>()
                .Name("Grid")
                .Columns(columns =>
                {
                    columns.Bound(p => p.fldID).Title("کد").Visible(false);
                    columns.Bound(p => p.fldName).Title("نام");
                    columns.Bound(p => p.fldTel).Title("تلفن");
                    columns.Bound(p => p.fldSmsOrder).Title("سامانه پیامک کوتاه");
                   columns.Bound(p => p.fldWebsite).Title("وب سایت");
                    columns.Bound(p => p.fldEmailAddress).Title("ایمیل");
                    columns.Bound(p => p.fldAddress).Title(" آدرس");
                    columns.Bound(p => p.fldDesc).Title("توضیحات");
                })
            .Selectable(selectable => selectable.Mode(GridSelectionMode.Single))
            .Pageable()
            .Scrollable()
            .DataSource(data =>
                data.Ajax()
                .PageSize(10)
                        .Read("Fill","ExternalPartner")
            )
        )
        </div>
    </div>
    <script type="text/javascript">
        $("document").ready(function () {
            $("#AddLink").button();
            $("#EditLink").button();
            $("#DelLink1").button();
            $("#exit").button();
            $("#Help").button();

            $('#ExternalPartner #btnClose').click(function () {
                $("#ExternalPartner").remove();
                isWinOpen = false;
            });
           
            $("#exit").click(function () {
                $("#ExternalPartner").remove();
                $("#CommonWin").remove();
                _WinOpen = false;
                $('#txtSearch1').focus();
            });
            $('#ExternalPartner').on('keyup', 'input', function (event) {
                if (event.which == 13) {
                    var inputs = $('#ExternalPartner').find(':input:visible');
                    inputs.eq(inputs.index(this) + 1).focus();
                }
            });
            $(document).keyup(function (event) {
                if (event.which == 119) {
                    SaveRecord();
                }
                else if (event.which == 113) {
                    EditRecord();
                }
                else if (event.which == 115) {
                    DeleteRecord();
                }
            });
            $('#AddLink').attr('title', 'کلید میانبر (F8)'); //119
            $('#EditLink').attr('title', 'کلید میانبر (F2)'); //113
            $('#DelLink1').attr('title', 'کلید میانبر (F4)'); //115

            jQuery("#EditLink").click(function () {
                EditRecord();
            });

            $('#DelLink1').click(function () {
                DeleteRecord();
            });

            $("#AddLink").click(function () {
                SaveRecord();
            });

            $('#txtSearch').keyup(function () {
                var url = '@Url.Action("Reload", "ExternalPartner")';
                Reload(url, 'Grid', $("#cboSearchFiald").val(), $("#txtSearch").val(), $("#txtTop").val(), $("#cboSearchType").val());
            });

            $("#txtName").keyup(function () {
                if ($("#txtName").val() != '') {
                    $("#txtName").removeClass("input-validation-error");
                    $("#lblNameError").html("");
                }
                else {
                    $("#txtName").addClass("input-validation-error");
                    $('#lblNameError').html('لطفا نام را وارد نمایید.');
                }
            });
        });

        function Clear() {
            $('#fldID').val(0);
            $('#txtTel').val('');
            $('#txtSmsOrder').val('');
            $('#txtWebsite').val('');
            $('#txtEmailAddress').val('');
            $('#txtAddress').val('');
            $('#txtName').val('');
            $('#txtDesc').val('');
        }

        function DeleteRecord() {
            var entityGrid = $("#Grid").data("kendoGrid");
            var selectedItem = entityGrid.dataItem(entityGrid.select());
            if (selectedItem) {
                var id = selectedItem.fldID;
                var URL = '@Url.Content("~/metro/YesNomsg")';
                URL = URL + "/?id=" + id + "&URL=" + '@Url.Content("~/ExternalPartner/Delete")';
                if (MetroDialogOpen == false) {
                    MetroDialogOpen = true;
                    windowAppend("body", URL);

                    $("#message").html('آیا مایل به حذف رکورد انتخاب شده هستید؟');
                }
            }
            else {
                windowAppend('body', '/metro/error');
                $('#message').html('لطفا یک سطر را انتخاب کنید.');
                $("#error .wintitle").html("خطا");
            }
            Clear();
        }
            function SaveRecord() {
                var er = false;
                if ($("#txtName").val() == '') {
                    $("#txtName").addClass("input-validation-error");
                    $('#lblNameError').html(' نام را وارد کنید');
                    er = true;
                }
                else
                    $('#lblNameError').html('');


                if (er)
                    return;

                var data = {
                    fldName: $("#txtName").val(), fldTel: $("#txtTel").val(), fldSmsOrder: $("#txtSmsOrder").val(),
                    fldWebsite: $("#txtWebsite").val(), fldEmailAddress: $("#txtEmailAddress").val(), fldAddress: $("#txtAddress").val(),
                    fldDesc: $("#txtDesc").val(), fldID: $("#fldID").val()
                };

                if (data != '') {
                    PostForm(data, '@Url.Content("~/ExternalPartner/Save")', "#win");
                }
                Clear();
            }
            function EditRecord() {
                var entityGrid = $("#Grid").data("kendoGrid");
                var selectedItem = entityGrid.dataItem(entityGrid.select());
                if (selectedItem) {
                    var id = selectedItem.fldID;
                    var URL = '@Url.Content("~/ExternalPartner/Details")';
                    URL = URL + "/" + id;
                    $.ajax({
                        type: "GET",
                        url: URL,
                        success: function (data) {
                            $('#fldID').val(data.fldID);
                            $('#txtName').val(data.fldName);
                            $('#txtTel').val(data.fldTel);
                            $('#txtSmsOrder').val(data.fldSmsOrder);
                            $('#txtWebsite').val(data.fldWebsite);
                            $('#txtEmailAddress').val(data.fldEmailAddress);
                            $('#txtAddress').val(data.fldAddress);
                            $('#txtDesc').val(data.fldDesc);
                        },
                        failure: function (data) {
                            alert(data.data);
                        }
                    });
                }
                else {
                    windowAppend('body', '/metro/error');
                    $('#message').html('لطفا یک سطر را انتخاب کنید.');
                    $("#error .wintitle").html("خطا");
                }
            }

        function Reload(Url, gridname, field, value, top, searchType) {
            var grid = $('#' + gridname).data('kendoGrid');
            $.ajax({
                url: Url,
                type: 'get',
                datatype: 'json',
                data: { field: field, value: value, top: top, searchtype: searchType },
                error: function (xhr, status, error) {
                    alert(xhr + status);
                },
                success: function (result) {
                    $("#" + gridname).data("kendoGrid").dataSource.data(result);
                }

            });
        }

        function PostForm(datas, url, id) {
            var sendInfo = datas;
            $('#Lock').show();
            $.ajax({
                type: "POST",
                url: url,
                data: sendInfo,
                datatype: "json",
                success: function (data) {
                    var m = data;
                    windowAppend("body", "/metro/error");
                    $("#message").html(m.data);
                    switch (m.state) {
                        case 0:
                            $("#error .wintitle").html("ذخیره موفق");
                            var url = '@Url.Action("Reload", "ExternalPartner")';
                            Reload(url, 'Grid', '0', '', 30, 1);
                            break;
                        case 1:
                            $("#error .wintitle").html("خطا");
                            break;
                    }

                    $('#Lock').hide();
                },
                failure: function (data) {
                    alert(data.data);
                }
            });
        }
    </script>
</div>
