                fldID: $("#fldID").val(),
                fldDesc: $("#txtDesc").val(),
                fldIsSigner: document.getElementById('IsSigner').checked,
                fldSSL: document.getElementById('SSL').checked,
                fldDelFax: document.getElementById('DelFax').checked

            };

            if (data != '') {
                PostForm(data, '@Url.Content("~/ProgramSetting/save")', id);
            }
            Clear();
        }

        function readURL(input) {
            if (input.files && input.files[0]) {//Check if input has files.
                if (input.files[0].size > 25600) {
                    alert('حجم فایل بزرگتر از 25 کیلو بایت است.');
                }
                else {
                    var reader = new FileReader(); //Initialize FileReader.

                    reader.onload = function (e) {
                        $('#PreviewImage').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(input.files[0]);
                }
            }
        }

        function getBase64Image(imgElem) {
            // imgElem must be on the same server otherwise a cross-origin error will be thrown "SECURITY_ERR: DOM Exception 18"
            var canvas = document.createElement("canvas");
            canvas.width = imgElem.clientWidth;
            canvas.height = imgElem.clientHeight;
            var ctx = canvas.getContext("2d");
            ctx.drawImage(imgElem, 0, 0, 80, 80);
            var dataURL = canvas.toDataURL("image/jpg");
            return dataURL.replace(/^data:image\/(png|jpg);base64,/, "");
        }
        

        function Reload(Url, gridname, field, value, top, searchType) {
            var grid = $('#' + gridname).data('kendoGrid');
            $.ajax({
                url: Url,
                type: 'get',
                datatype: 'json',
                data: { field: field, value: value, top: top, searchtype: searchType },
                error: function (xhr, status, error) {
                    alert(xhr + status);
                },
                success: function (result) {
                    $("#" + gridname).data("kendoGrid").dataSource.data(result);
                }

            });
        }
        function load(_id) {
            var URL = '@Url.Content("~/ProgramSetting/Details")';
            URL = URL + "/" + _id;
            $.ajax({
                type: "GET",
                url: URL,
                success: function (data) { 
                    $('#fldID').val(data.fldID);
                    $('#txtName').val(data.fldName); 
                    $('#txtEmailAddress').val(data.fldEmailAddress);
                    $('#txtEmailPassword').val(data.fldEmailPassword);
                    $('#txtFaxPath').val(data.fldFaxPath);
                    $('#txtRecieveServer').val(data.fldRecieveServer);
                    $('#txtRecievePort').val(data.fldRecievePort);
                    $('#txtSendServer').val(data.fldSendServer);
                    $('#txtSendPort').val(data.fldSendPort);
                    $('#txtDesc').val(data.fldDesc);
                    var g = '@Url.Content("~/ProgramSetting/Image/")' + $('#fldID').val();
                    $('#PreviewImage').attr('src', g); 
                    document.getElementById('IsSigner').checked = data.fldIsSigner;
                    document.getElementById('SSL').checked = data.fldSSL;
                    document.getElementById('DelFax').checked = data.fldDelFax;
                },
                failure: function (data) {
                    alert(data.data);
                }
            });
        }
        function PostForm(datas, url, id) {
            var sendInfo = datas;
            $('#Lock').show();
            $.ajax({
                type: "POST",
                url: url,
                data: sendInfo,
                datatype: "json",
                success: function (data) {
                    var m = data;
                    windowAppend("body", "/metro/error");
                    $("#message").html(m.data);
                    switch (m.state) {
                        case 0:
                            $("#error .wintitle").html("ذخیره موفق");
                            
                            break;
                        case 1:
                            $("#error .wintitle").html("خطا");
                            break;
                    }
                    load(id);
                    $('#Lock').hide();
                },
                failure: function (data) {
                    alert(data.data);
                }
            });
        }
