            }
            else
                $('#lblEmailAddressError').html('');     
            
            if ($("#txtEmailPassword").val() == '') {
                $("#txtEmailPassword").addClass("input-validation-error");
                $('#lblEmailPasswordError').html('لطفا رمز عبور را وارد نمایید.');
                er = true;
            }
            else
                $('#lblEmailPasswordError').html('');

            if ($("#txtFaxPath").val() == '') {
                $("#txtFaxPath").addClass("input-validation-error");
                $('#lblFaxPathError').html('لطفا مسیر دریافت فکس ها را وارد نمایید.');
                er = true;
            }
