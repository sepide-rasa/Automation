            var image = document.getElementById('PreviewImage');
            var c = image.attributes[1];
            var imgData = "";
            if (c.value != "")
                imgData = getBase64Image(image);
            var data = {
                fldName: $("#txtName").val(),
                fldEmailAddress: $("#txtEmailAddress").val(),
                fldFaxPath: $("#txtFaxPath").val(),
                fldEmailPassword: $("#txtEmailPassword").val(),
                fldRecieveServer: $("#txtRecieveServer").val(),
